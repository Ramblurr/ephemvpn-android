<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >
    
    
    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="49dp"
        android:text="Summon VPN" />

    <GridLayout
        android:layout_below="@id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="50dp"
        android:columnCount="2" >

        <TextView
            android:id="@+id/vpn_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="0"
            android:textStyle="bold"
            android:text="VPN: " />

        <TextView
            android:id="@+id/vpn_type"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="IPSEC/L2TP" />
             <TextView
            android:id="@+id/vpn_host_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="1"
            android:textStyle="bold"
            android:text="Hostname: " />

        <TextView
            android:id="@+id/vpn_host"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="1"
            android:text="" />
           
         <TextView
            android:id="@+id/vpn_psk_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="2"
            android:textStyle="bold"
            android:text="PSK: " />

        <TextView
            android:id="@+id/vpn_psklabel"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="2"
            android:text="" />
        
         <TextView
            android:id="@+id/vpn_user_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="3"
            android:textStyle="bold"
            android:text="Username " />

        <TextView
            android:id="@+id/vpn_user"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="3"
            android:text="" />
        
         <TextView
            android:id="@+id/vpn_pass_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|bottom"
            android:layout_row="4"
            android:textStyle="bold"
            android:text="Password: " />

        <TextView
            android:id="@+id/vpn_pass"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="4"
            android:text="" />
    </GridLayout>

</RelativeLayout>